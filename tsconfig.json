{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2020"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "composite": true,
    "outDir": "./lib/esm",
    "rootDir": "./src"
  },
  "include": [
    "types/*",
    "src/**/*"
  ],
}
